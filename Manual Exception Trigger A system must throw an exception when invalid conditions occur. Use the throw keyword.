import java.util.Scanner;

// Custom exception for invalid input
class InvalidAmountException extends Exception {
    public InvalidAmountException(String message) {
        super(message);
    }
}

class PaymentSystem {

    // Method to process payment
    public static void processPayment(double amount) throws InvalidAmountException {
        if (amount <= 0) {
            // Manually throw an exception for invalid amount
            throw new InvalidAmountException("Payment amount must be greater than zero.");
        }
        System.out.println("Payment of $" + amount + " processed successfully.");
    }
}

public class Main {
    public static void main(String[] args) {

        Scanner scanner = new Scanner(System.in);

        try {
            System.out.print("Enter payment amount: ");
            double amount = scanner.nextDouble();

            // Trigger exception manually if condition invalid
            PaymentSystem.processPayment(amount);

        } 
        catch (InvalidAmountException e) {
            System.out.println("Error: " + e.getMessage());
        } 
        finally {
            scanner.close();
            System.out.println("Payment attempt completed.");
        }
    }
}
