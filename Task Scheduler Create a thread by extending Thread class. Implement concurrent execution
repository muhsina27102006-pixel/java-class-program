// Task 1: Print numbers
class NumberPrinter extends Thread {
    private int limit;

    public NumberPrinter(int limit) {
        this.limit = limit;
    }

    @Override
    public void run() {
        System.out.println(Thread.currentThread().getName() + " started.");
        for (int i = 1; i <= limit; i++) {
            System.out.println(Thread.currentThread().getName() + " prints: " + i);
            try {
                Thread.sleep(500); // Pause for 0.5 seconds
            } catch (InterruptedException e) {
                System.out.println(Thread.currentThread().getName() + " interrupted.");
            }
        }
        System.out.println(Thread.currentThread().getName() + " finished.");
    }
}

// Task 2: Print letters
class LetterPrinter extends Thread {
    private int limit;

    public LetterPrinter(int limit) {
        this.limit = limit;
    }

    @Override
    public void run() {
        System.out.println(Thread.currentThread().getName() + " started.");
        for (char c = 'A'; c < 'A' + limit; c++) {
            System.out.println(Thread.currentThread().getName() + " prints: " + c);
            try {
                Thread.sleep(700); // Pause for 0.7 seconds
            } catch (InterruptedException e) {
                System.out.println(Thread.currentThread().getName() + " interrupted.");
            }
        }
        System.out.println(Thread.currentThread().getName() + " finished.");
    }
}

// Main class
public class TaskScheduler {
    public static void main(String[] args) {

        // Create thread objects
        NumberPrinter t1 = new NumberPrinter(5);
        LetterPrinter t2 = new LetterPrinter(5);

        // Start threads (concurrent execution)
        t1.start();
        t2.start();

        System.out.println("Main thread continues execution...");
    }
}
